p There are {{posts.length}} snippets
div
	div(ng-repeat='post in posts')

		h3 {{post.title}}
		div {{post.rendered_output}}
		div {{post.jade_source}}
		div {{post.html_source}}
			input(type="text" ng-model="input" id="input1")
			//button.clip_button(ui-zeroclip zeroclip-copied="complete($event)" zeroclip-on-error="clipError($event)" zeroclip-model="input")
			button.clip_button#my-button_textarea(data-clipboard-target="clipboard_textarea") Copy to Clipboard
			button.clip_button#my-button_pre(data-clipboard-target="clipboard_pre") Copy to Clipboard
			table.snippets-table
				tbody
					tr
						td.snippet
							.copy-source-container
								a.copy-source(href="javascript:void(0)") Copy Scss
							pre.language-scss
								code(ng-model="code-html").language-markup
									include ../snippets/library/nav1/scss/styles.scss

						td.snippet
							.copy-source-container
								a.copy-source(href="javascript:void(0)") Copy HTML
							pre.language-markup
								code.language-markup( prism )
									include ../snippets/library/nav1/index.html
			textarea#clipboard_textarea(rows="20")
