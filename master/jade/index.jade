doctype html
html(lang="en", data-ng-app="graybox")

	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

		meta(name='description', content='{{app.description}}')
		meta(name='keywords', content='GRAYBOX Snippet Library')

		title(ng-bind="pageTitle()")
		// Application styles
		link(rel='stylesheet', href='app/css/app.css', data-ng-if="!app.layout.isRTL")
		// Themes
		link(rel='stylesheet', ng-href='{{app.layout.theme}}', data-ng-if="app.layout.theme")

	body(data-ng-class="layout-h")
		div(data-preloader)
		.svgdef(style="display:none;")
			include _svgDef
		.wrapper(data-ui-view="", data-autoscroll='false')
		script(src='app/js/base.js')
		script(src='app/js/app.js')
		script(src='app/js/custom.js')